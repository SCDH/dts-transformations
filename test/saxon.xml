<?xml version="1.0" encoding="UTF-8"?>
<!--
This Saxon configuration file registeres the example packages for processing mediaType, which are located in this directory
-->
<configuration edition="HE" xmlns="http://saxon.sf.net/ns/configuration">

    <xsltPackages>
        <package name="https://scdh.github.io/dts-transformations/xsl/dts.xsl" version="1.0.0"
            sourceLocation="../xsl/dts.xsl"/>
        <package name="https://scdh.github.io/dts-transformations/xsl/errors.xsl" version="1.0.0"
            sourceLocation="../xsl/errors.xsl"/>
        <package name="https://scdh.github.io/dts-transformations/xsl/cut.xsl" version="1.0.0"
            sourceLocation="../xsl/cut.xsl"/>
        <package name="https://scdh.github.io/dts-transformations/xsl/tree.xsl" version="1.0.0"
            sourceLocation="../xsl/tree.xsl"/>

        <package name="https://scdh.github.io/dts-transformations/xsl/url-templates.xsl"
            base="https://scdh.github.io/dts-transformations/xsl/url-templates-with-query-parameters.xsl"
            version="1.0.0" sourceLocation="../xsl/url-templates-with-query-parameters.xsl"
            priority="100"/>
        <package
            name="https://scdh.github.io/dts-transformations/xsl/url-templates-with-query-parameters.xsl"
            version="1.0.0" sourceLocation="../xsl/url-templates-with-query-parameters.xsl"/>

        <!-- the following packages are not required by downstream -->
